    <div class="container text-center p-5">
      <main class="form-signin">
        <h1 class="p-3">Καταχώρηση διαθεσιμότητας</h1>
        <form class="p-3" name="availabilityForm" id="availabilityForm" action="/availability" method="POST" onsubmit="return validateForm()">
            <label for="datetime-availability-start">Start (date and time):</label>
            <input type="datetime-local" id="datetime-availability-start" name="availabilityStart">
            <label for="datetime-availability-end">End (date and time):</label>
            <input type="datetime-local" id="datetime-availability-end" name="availabilityEnd">
            <button class="btn btn-primary" type="submit">Submit</button>
        </form>
        <%= response %>
        <div class="p-3">
            <h1>Σύνοψη διαθεσιμότητας</h1>
            <% if(db_conn_status == '1') { %>
              <% if(db_response.length == 0) { %>
                <h3>Δεν υπάρχουν δεδομένα προς εμφάνιση.</h3>
              <% } else { %>
                <table class="table">
                  <thead>
                    <tr>
                      <th scope="col">#</th>
                      <th scope="col">Start time</th>
                      <th scope="col">End time</th>
                    </tr>
                  </thead>
                  <tbody> 
                    <% for(let i = 0; i<db_response.length; i++) {%>
                      <tr>  
                        <th scope="row"><%= i+1 %></th>
                        <td><%= db_response[i].start_time %></td>
                        <td><%= db_response[i].end_time %></td>
                      </tr>
                    <% } %>
                  </tbody>
                </table>
              <% } %>
            <% } else if (db_conn_status == '0') { %>
              <h3>Failed to connect with out database :(</h3>
            <%} else { %>
              <h3>Unknown error :(</h3> 
            <% } %>
            
        </div>
      </main>
    </div>

    <script>
        function validateForm() {
            let start = document.forms["availabilityForm"]["availabilityStart"].value;
            let end = document.forms["availabilityForm"]["availabilityEnd"].value;

            console.log('third check')
            let now = new Date();
            console.log(now)

            if (start == "" || end == "") {
                alert("Start and end time must be filled out");
                return false;
            }

            console.log('second check')
            if (start >= end) {
                alert("Invalid time sequence")
                return false
            }
        }
    </script>
