                    <th scope="col">Δ/νση παραλήπτη</th>
                    <th>Αλλαγή κατάστασης</th>
                </tr>
            </thead>
            <tbody> 
                <% for (let i = 0; i < db_response.length; i++) { %>
                <tr>  
                    <th scope="row"><%=db_response[i].id%></th>
                    <td><%= db_response[i].name %></td>
                    <td><%= (new Date(db_response[0].date_created)).toISOString().slice(0, 16) %></td>
                    <td><%= db_response[i].current_status %></td>
                    <td><%= db_response[i].sender_name %></td>
                    <td><%= db_response[i].sender_address %></td>
                    <td><%= db_response[i].receiver_name %></td>
                    <td><%= db_response[i].receiver_address %></td>
                    <td>
                        <form class="form" action="/set_sender" method="POST">
                            <input type="text" value="<%= db_response[i].id %>" name="id" class="invisible">
                            <select onchange="this.form.submit()" 
                            class="form-select" name="new_status" 
                            aria-label="Default select example"
                             <% if (db_response[i].current_status != 'CREATED' && 
                             db_response[i].current_status != 'READY TO DISPATCH') {%> 
                                dosabled <% } %> >
                                <option value="ON TRANSIT" <% if (db_response[i].current_status == 'CREATED') {%> selected <% } %>>CREATED</option>
                                <option value="DELIVERED" <% if (db_response[i].current_status == 'READY TO DISPATCH') {%> selected <% } %>>READY TO DISPATCH</option>
                                <button class="btn btn-primary"></button>
                            </selsect>
                        </form>
                    </td>
                </tr>
                <% } %>
